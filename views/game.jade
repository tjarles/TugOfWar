head
  link(rel='stylesheet', href='/stylesheets/game.css')
  script(type='text/javascript', src='/javascripts/game.js')
  script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js")

body
  div#pink
    h1= "pink square/team"
    //For testing
    //p#value count: #{val}
    a(onclick="postHandler('p')")
